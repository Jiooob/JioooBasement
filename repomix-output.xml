def update_main_index(pages):
    from . import config

    # (æ—§é€»è¾‘ï¼Œä¿ç•™ä»¥é˜²ä¸‡ä¸€)
    post_list_html = "..." # çœç•¥æœªæ”¹å˜éƒ¨åˆ†
    
    # --- ä¸º Sector 01 ç”Ÿæˆæ–‡ç« å¡ç‰‡ ---
    article_cards_html = ""
    for page in pages:
        relative_path = page.path.relative_to(config.CONTENT_DIR)
        # --- æ ¸å¿ƒä¿®æ”¹ï¼šæ·»åŠ ä¸€ä¸ªå¸¦æœ‰ class="size" çš„ <p> æ ‡ç­¾æ¥æ˜¾ç¤ºå¤§å° ---
        # ä½¿ç”¨ f-string çš„æ ¼å¼åŒ–åŠŸèƒ½ `{page.size_in_bits:,}` æ¥ä¸ºæ•°å­—æ·»åŠ åƒä½åˆ†éš”ç¬¦
        article_cards_html += f"""
