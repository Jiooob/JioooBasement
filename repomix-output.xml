#sector-1-content-anchor {
    position: absolute;
    /* 核心: top 值与扇区1的深度线对齐，并留出 60px 的上边距 */
    top: calc(100vh + 2640px + 60px); 
    left: 50px;
    right: 50px;
    box-sizing: border-box;
    /* 核心: 这个 padding-right 确保了内容不会与右侧面板重叠 */
    padding-right: calc(33.33% + 50px); 
}

/* 文章卡片容器本身的样式: 只负责内部布局，不负责定位 */
.article-cards-container {
    display: grid;
    grid-template-columns: 1fr; /* 单列网格 */
