import os
import frontmatter
import markdown
import argparse
from pathlib import Path

def convert_md_to_html(md_file_path, output_dir):
    """
    è¯»å–å•ä¸ª Markdown æ–‡ä»¶ï¼Œè§£æå…¶å…ƒæ•°æ®å’Œå†…å®¹ï¼Œ
    å°†å…¶è½¬æ¢ä¸ºç¬¦åˆåšå®¢ç³»ç»Ÿæ ¼å¼çš„ HTML æ–‡ä»¶ï¼Œå¹¶åœ¨æˆåŠŸååˆ é™¤æºæ–‡ä»¶ã€‚
    """
    try:
        # è¯»å–å¹¶è§£æ Markdown æ–‡ä»¶
        with open(md_file_path, 'r', encoding='utf-8') as f:
            post = frontmatter.load(f)

        # å°† Markdown å†…å®¹éƒ¨åˆ†è½¬æ¢ä¸º HTML
        html_content = markdown.markdown(post.content)

        # æ„å»ºç¬¦åˆç³»ç»Ÿè¦æ±‚çš„ HTML ç»“æ„
        meta_tags = ""
        for key, value in post.metadata.items():
            meta_tags += f'    <meta name="blog-{key}" content="{value}">\n'

        final_html = f"""<!DOCTYPE html>
<html>
<head>
{meta_tags}</head>
<body>
{html_content}
</body>
</html>"""

        # ç¡®å®šè¾“å‡ºæ–‡ä»¶å
        base_filename = Path(md_file_path).stem
        output_filename = base_filename + ".html"
        output_path = Path(output_dir) / output_filename

        # å†™å…¥æœ€ç»ˆçš„ HTML æ–‡ä»¶
        with open(output_path, 'w', encoding='utf-8') as f:
            f.write(final_html)
        
        # åœ¨æˆåŠŸå†™å…¥åï¼Œåˆ é™¤æºæ–‡ä»¶
        os.remove(md_file_path)
        
        # åœ¨æ—¥å¿—ä¸­æ³¨æ˜æºæ–‡ä»¶å·²è¢«åˆ é™¤
        print(f"æˆåŠŸ: {md_file_path} -> {output_path} (æºæ–‡ä»¶å·²åˆ é™¤)")

    except Exception as e:
        print(f"é”™è¯¯: å¤„ç†æ–‡ä»¶ {md_file_path} æ—¶å‘ç”Ÿé”™è¯¯: {e} (æºæ–‡ä»¶æœªåˆ é™¤)")

def main():
    """
    ä¸»å‡½æ•°ï¼Œå¤„ç†å‘½ä»¤è¡Œå‚æ•°å¹¶æ ¹æ®è¾“å…¥æ˜¯æ–‡ä»¶è¿˜æ˜¯ç›®å½•æ¥æ‰§è¡Œè½¬æ¢ã€‚
    """
    parser = argparse.ArgumentParser(description="å°† Markdown æ–‡ä»¶è½¬æ¢ä¸ºåšå®¢ä¸“ç”¨çš„ HTML æ ¼å¼ï¼Œå¹¶åˆ é™¤æºæ–‡ä»¶ã€‚")
    parser.add_argument("input_path", type=str, help="æº Markdown æ–‡ä»¶æˆ–ç›®å½•çš„è·¯å¾„ã€‚")
    parser.add_argument("output_dir", type=str, help="å­˜æ”¾è½¬æ¢åçš„ HTML æ–‡ä»¶çš„ç›®å½•ã€‚")
    args = parser.parse_args()

    input_path = Path(args.input_path)
    output_path = Path(args.output_dir)

    # ç¡®ä¿è¾“å‡ºç›®å½•å­˜åœ¨
    if not output_path.exists():
        print(f"ä¿¡æ¯: è¾“å‡ºç›®å½• '{output_path}' ä¸å­˜åœ¨ï¼Œå°†è‡ªåŠ¨åˆ›å»ºã€‚")
        os.makedirs(output_path)

    # --- æ ¸å¿ƒå˜æ›´ï¼šåˆ¤æ–­è¾“å…¥è·¯å¾„æ˜¯æ–‡ä»¶è¿˜æ˜¯ç›®å½• ---
    if input_path.is_file():
        if input_path.suffix == '.md':
            print(f"å¼€å§‹å•æ–‡ä»¶å¤„ç†: '{input_path}'...")
            convert_md_to_html(input_path, output_path)
        else:
            print(f"é”™è¯¯: è¾“å…¥æ–‡ä»¶ '{input_path}' ä¸æ˜¯ä¸€ä¸ª Markdown (.md) æ–‡ä»¶ã€‚")
            return
    elif input_path.is_dir():
        print(f"å¼€å§‹ä»ç›®å½• '{input_path}' è¿›è¡Œæ‰¹é‡å¤„ç†...")
        md_files = list(input_path.glob("*.md"))
        if not md_files:
            print("è­¦å‘Š: åœ¨ç›®å½•ä¸­æœªæ‰¾åˆ°ä»»ä½• .md æ–‡ä»¶ã€‚")
        else:
            for md_file in md_files:
                convert_md_to_html(md_file, output_path)
    else:
        print(f"é”™è¯¯: è¾“å…¥è·¯å¾„ '{input_path}' æ— æ•ˆæˆ–ä¸å­˜åœ¨ã€‚")
        return
    
    print("è½¬æ¢å®Œæˆã€‚")

if __name__ == "__main__":
    main()
